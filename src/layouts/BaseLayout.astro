---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Expert VPN reviews, speed tests, and buying guides. Find the best VPN for Netflix, torrenting, privacy, and more." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <meta name="generator" content={Astro.generator} />

    <title>{title} | Top10VPNList</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://top10vpnlist.com/icon.svg" />

    <!-- Schema.org -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Top10VPNList",
        "url": "https://top10vpnlist.com"
      }
    </script>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-KCNXPWXK');</script>
    <!-- End Google Tag Manager -->
  </head>
  <body class="bg-gray-50 text-gray-900">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KCNXPWXK"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="flex items-center space-x-3">
            <img src="/logo-compact.svg" alt="Top10VPNList - Expert VPN Reviews" class="h-12 w-auto" />
          </a>
          
          <div class="hidden md:flex items-center space-x-6">
            <a href="/find-vpn" class="text-white bg-gradient-to-r from-blue-600 to-purple-600 px-4 py-2 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all shadow-md">
              Find Your VPN
            </a>
            <a href="/#top-vpns" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              Reviews
            </a>
            <a href="/compare" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              Compare
            </a>
            <a href="/methodology" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              How We Test
            </a>
            <a href="/about" class="text-gray-700 hover:text-blue-600 font-medium transition-colors">
              About
            </a>
          </div>

          <div class="md:hidden">
            <button id="mobile-menu-button" class="text-gray-700 hover:text-blue-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
        <div class="px-4 py-4 space-y-3">
          <a href="/find-vpn" class="block text-blue-600 hover:text-blue-700 font-bold">Find Your VPN</a>
          <a href="/#top-vpns" class="block text-gray-700 hover:text-blue-600 font-medium">Reviews</a>
          <a href="/compare" class="block text-gray-700 hover:text-blue-600 font-medium">Compare</a>
          <a href="/methodology" class="block text-gray-700 hover:text-blue-600 font-medium">How We Test</a>
          <a href="/about" class="block text-gray-700 hover:text-blue-600 font-medium">About</a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Brand -->
          <div>
            <h3 class="text-white text-xl font-bold mb-4">Top10VPNList</h3>
            <p class="text-sm text-gray-400">
              Independent VPN reviews and recommendations since 2025.
            </p>
          </div>

          <!-- Reviews -->
          <div>
            <h4 class="text-white font-semibold mb-4">VPN Reviews</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/reviews/mullvad" class="hover:text-white transition-colors">Mullvad VPN</a></li>
              <li><a href="/reviews/ivpn" class="hover:text-white transition-colors">IVPN</a></li>
              <li><a href="/reviews/protonvpn" class="hover:text-white transition-colors">ProtonVPN</a></li>
              <li><a href="/reviews/airvpn" class="hover:text-white transition-colors">AirVPN</a></li>
              <li><a href="/reviews/windscribe" class="hover:text-white transition-colors">Windscribe</a></li>
            </ul>
          </div>

          <!-- Categories -->
          <div>
            <h4 class="text-white font-semibold mb-4">Best VPNs For</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/best/netflix" class="hover:text-white transition-colors">Netflix</a></li>
              <li><a href="/best/torrenting" class="hover:text-white transition-colors">Torrenting</a></li>
              <li><a href="/best/gaming" class="hover:text-white transition-colors">Gaming</a></li>
              <li><a href="/best/privacy" class="hover:text-white transition-colors">Privacy</a></li>
              <li><a href="/best/streaming" class="hover:text-white transition-colors">Streaming</a></li>
            </ul>
          </div>

          <!-- Legal -->
          <div>
            <h4 class="text-white font-semibold mb-4">Information</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/about" class="hover:text-white transition-colors">Why This Site Exists</a></li>
              <li><a href="/methodology" class="hover:text-white transition-colors">How We Test VPNs</a></li>
              <li><a href="/find-vpn" class="hover:text-white transition-colors">Find Your VPN</a></li>
              <li><a href="/compare" class="hover:text-white transition-colors">Compare All VPNs</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-sm text-gray-500">
          <p class="text-center mb-4">© 2025 Top10VPNList. All rights reserved.</p>
          <div class="max-w-3xl mx-auto text-center">
            <p class="mb-2">
              <strong>Affiliate Disclosure:</strong> We earn commissions when you purchase VPNs through our links. However, we rank VPNs based on privacy, security, and value—not commission rates. We recommend Mullvad (#1) even though it pays the lowest commission.
            </p>
            <p>
              Read our <a href="/about" class="text-blue-400 hover:text-blue-300">full transparency policy</a> and <a href="/methodology" class="text-blue-400 hover:text-blue-300">testing methodology</a>.
            </p>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
