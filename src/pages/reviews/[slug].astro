---
import BaseLayout from '../../layouts/BaseLayout.astro';
import vpnData from '../../data/vpns.json';

export function getStaticPaths() {
  return vpnData.vpns.map((vpn) => ({
    params: { slug: vpn.id },
    props: { vpn },
  }));
}

const { vpn } = Astro.props;
---

<BaseLayout 
  title={`${vpn.name} Review 2025 - Speed, Security & Value Tested`}
  description={vpn.description}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="flex-1">
          <div class="text-blue-200 text-sm font-semibold mb-2">EXPERT REVIEW</div>
          <h1 class="text-5xl font-bold mb-4">{vpn.name}</h1>
          <p class="text-2xl text-blue-100 mb-6">{vpn.tagline}</p>
          <div class="flex items-center gap-4 mb-6">
            <div class="flex">
              {[...Array(5)].map((_, i) => (
                <svg
                  class={`w-6 h-6 ${
                    i < Math.floor(vpn.rating) ? 'text-yellow-400' : 'text-blue-300'
                  }`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-xl font-semibold">{vpn.rating}/5.0</span>
          </div>
          <a
            href={vpn.affiliateLink}
            target="_blank"
            rel="noopener noreferrer sponsored"
            class="inline-block bg-white text-blue-700 px-8 py-4 rounded-xl font-bold text-lg hover:bg-blue-50 transition-colors shadow-xl"
          >
            Get {vpn.name} Now →
          </a>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-2xl">
          <div class="text-center">
            <div class="text-gray-500 text-sm mb-2">Starting at</div>
            <div class="text-4xl font-bold text-blue-600 mb-1">{vpn.price.display}</div>
            <div class="text-gray-600 text-sm mb-4">with long-term plan</div>
            <div class="grid grid-cols-3 gap-4 text-center pt-4 border-t border-gray-200">
              <div>
                <div class="text-2xl font-bold text-gray-900">{vpn.features.servers}</div>
                <div class="text-xs text-gray-600">Servers</div>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-900">{vpn.features.countries}</div>
                <div class="text-xs text-gray-600">Countries</div>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-900">{vpn.features.devices}</div>
                <div class="text-xs text-gray-600">Devices</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Summary -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">The Bottom Line</h2>
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">
          {vpn.description}
        </p>
        
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Pros -->
          <div>
            <h3 class="text-xl font-bold text-green-600 mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Pros
            </h3>
            <ul class="space-y-3">
              {vpn.pros.map((pro) => (
                <li class="flex items-start text-gray-700">
                  <span class="text-green-500 mr-2 mt-1">✓</span>
                  <span>{pro}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Cons -->
          <div>
            <h3 class="text-xl font-bold text-red-600 mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              Cons
            </h3>
            <ul class="space-y-3">
              {vpn.cons.map((con) => (
                <li class="flex items-start text-gray-700">
                  <span class="text-red-500 mr-2 mt-1">✗</span>
                  <span>{con}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Deep Dive -->
  <section class="py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Features & Specifications</h2>
      
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="grid md:grid-cols-2">
          <div class="p-6 border-b md:border-b-0 md:border-r border-gray-200">
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Encryption</span>
              <span class="text-gray-900 font-bold">{vpn.features.encryption}</span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Kill Switch</span>
              <span class={vpn.features.killSwitch ? 'text-green-600 font-bold' : 'text-red-600 font-bold'}>
                {vpn.features.killSwitch ? '✓ Yes' : '✗ No'}
              </span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Split Tunneling</span>
              <span class={vpn.features.splitTunneling ? 'text-green-600 font-bold' : 'text-red-600 font-bold'}>
                {vpn.features.splitTunneling ? '✓ Yes' : '✗ No'}
              </span>
            </div>
          </div>
          
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Tor Support</span>
              <span class={vpn.features.tor ? 'text-green-600 font-bold' : 'text-gray-400 font-bold'}>
                {vpn.features.tor ? '✓ Yes' : '✗ No'}
              </span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Protocols</span>
              <span class="text-gray-900 font-bold text-right">{vpn.features.protocols.join(', ')}</span>
            </div>
            <div class="flex items-center justify-between mb-4">
              <span class="text-gray-700 font-medium">Devices</span>
              <span class="text-gray-900 font-bold">{vpn.features.devices}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gradient-to-br from-blue-600 to-blue-800 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">
        Ready to try {vpn.name}?
      </h2>
      <p class="text-xl text-blue-100 mb-8">
        Get started with {vpn.name} today. 30-day money-back guarantee.
      </p>
      <a
        href={vpn.affiliateLink}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="inline-block bg-white text-blue-700 px-12 py-5 rounded-xl font-bold text-xl hover:bg-blue-50 transition-colors shadow-2xl"
      >
        Get {vpn.name} - {vpn.price.display}
      </a>
    </div>
  </section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Review",
    "itemReviewed": {
      "@type": "SoftwareApplication",
      "name": vpn.name,
      "applicationCategory": "VPN",
      "offers": {
        "@type": "Offer",
        "price": vpn.price.annual,
        "priceCurrency": "USD"
      }
    },
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": vpn.rating,
      "bestRating": 5
    },
    "author": {
      "@type": "Organization",
      "name": "Top10VPNList"
    }
  })} />
</BaseLayout>
